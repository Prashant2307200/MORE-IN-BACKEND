<div class="post">
    <h3 class="username">@<%= post.username %></h3>
    <p class="content"><%= post.content %></p>
    <div class="btns">
        <% if( !show ){ %>
            <a href="http://localhost:3000/posts/<%= post.id %>">Show Detail</a>
        <% } %>
        <% if( !edit ){ %>
            <a href="http://localhost:3000/posts/<%= post.id %>/edit">Edit Detail</a>
        <% } %>
        <form class="btn" action="/posts/<%= post.id %>?_method=DELETE" method="post">
            <button type="submit">Delete Post</button>
        </form>
    </div>
</div>